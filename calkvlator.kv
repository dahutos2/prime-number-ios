#: import get_color_from_hex kivy.utils.get_color_from_hex

BoxLayout:
    orientation: "vertical"
	display: display_output

	ActionBar:
		ActionView:
			ActionPrevious:
				title: '素数判定'
                with_previous: False

    TextInput:
		id: display_output
		size_hint_y: 1
		font_size: 60
    Keyboard:
		size_hint_y: 3.5


<Keyboard@GridLayout>:
	cols: 5
	rows: 5
	spacing: 2
	padding: 4

	ClearButton:
		text: "C"
	CodeButton:
		text: "+/-"
	OperatorButton:
		text: "("
    OperatorButton:
        text: ")"
	DelButton:
        text: "＜X"
        

	NumberButton:
		text: "7"
	NumberButton:
		text: "8"
	NumberButton:
		text: "9"
	OperatorButton:
		text: "+"
    OperatorButton:
        text: "-"

	NumberButton:
		text: "4"
	NumberButton:
		text: "5"
	NumberButton:
		text: "6"
	OperatorButton:
		text: "*"
    OperatorButton:
        text: "/"

	NumberButton:
		text: "1"
	NumberButton:
		text: "2"
	NumberButton:
		text: "3"
    OperatorButton:
        text: "//"
    OperatorButton:
        text: "%"

	NumberButton:
		text: "0"
    NumberButton:
        text: "."
    EqualButton:
        text: "="
    ExponentialButton:
        text: "指数"
    PrimeButton:
        text: "a/p"
        
<CalcButton@Button>:
	font_size: 60
	background_normal: ''
	background_down: ''
	background_color: get_color_from_hex("#1F6982")
	on_press: self.background_color = get_color_from_hex("#184B5C")
	on_release: self.background_color = get_color_from_hex("#1F6982")

<NumberButton@CalcButton>:
	font_size: 60
	bold: True
	on_press: app.print_number(self.text)

<OperatorButton@CalcButton>:
	on_press: app.print_operator(self.text)

<ClearButton@CalcButton>:
	on_press: app.clear_display()

<DelButton@CalcButton>:
	on_press: app.del_char()
    
<PrimeButton@CalcButton>:
    on_press: app.prime_judge()

<CodeButton@CalcButton>:
    on_press: app.code_change()

<ExponentialButton@CalcButton>:
    on_press: app.exponential_notation()

<EqualButton@CalcButton>:
	on_press: app.calculate()
